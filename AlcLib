function useItem(x, y, z, itemId, blockId, blockDamage)
{
if(itemId==255 && blockId==15)
{
setTile(x, y, z, 14);
addItemInventory(255, -1);
}
if(itemId==255 && blockId==1)
{
setTile(x, y, z, 15);
addItemInventory(255, -1);
}
if(itemId==255 && blockId==4)
{
setTile(x, y, z, 48);
addItemInventory(255, -1);
}
if(itemId==255 && blockId==5)
{
setTile(x, y, z, 47);
addItemInventory(255, -1);
}
if(itemId==255 && blockId==49)
{
setTile(x, y, z, 42);
addItemInventory(255, -1);
}
if(itemId==255 && blockId==89)
{
Level.setTime(0);
setTile(x, y, z, 0);
addItemInventory(255, -1);
}
}
