function useItem(x, y, z, itemId, blockId, blockDamage)
{
if(itemId==ESS && blockId==15)
{
setTile(x, y, z, 14);
addItemInventory(ESS, -1);
}
if(itemId==ESS && blockId==1)
{
setTile(x, y, z, 15);
addItemInventory(ESS, -1);
}
if(itemId==ESS && blockId==4)
{
setTile(x, y, z, 48);
addItemInventory(ESS, -1);
}
if(itemId==ESS && blockId==5)
{
setTile(x, y, z, 47);
addItemInventory(ESS, -1);
}
if(itemId==ESS && blockId==49)
{
setTile(x, y, z, 42);
addItemInventory(ESS, -1);
}
if(itemId==ESS && blockId==89)
{
Level.setTime(0);
setTile(x, y, z, 0);
addItemInventory(ESS, -1);
}
if(itemId==EXR)
{
if(blockId==15)
{
preventDefault();
setTile(x, y, z, 0);
addItemInventory(265,6);
}
if(blockId==14)
{
preventDefault();
setTile(x, y, z, 0);
addItemInventory(266,3);
}
if(blockId==56)
{
preventDefault();
setTile(x, y, z, 0);
addItemInventory(264,8);
}
if(blockId==16)
{
preventDefault();
setTile(x, y, z, 0);
addItemInventory(173,2);
}
if(blockId==21)
{
preventDefault();
setTile(x, y, z, 0);
addItemInventory(351,20,4);
}
}
}
